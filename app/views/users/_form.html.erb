    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
   <div> 
   <%= f.label :roles %><br />
  <% @roles.each do |role| %>
    <%= check_box_tag "user[role_ids][]", role.id, @user.roles.include?(role), {:id => "user_role_ids_#{role.id}"} %>

<h1>Listing roles</h1>

<table id="role_list">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th colspan=2>Action</th>
  </tr>

<% @roles.each do |role| %>
  <tr class="<%= cycle('oddrow','evenrow') %>">
    <td><%= role.name %></td>
    <td><%= role.description%></td>
    <td><%= link_to 'Edit', edit_role_path(role) %></td>
    <td><%= link_to 'Delete', role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Create New Role', new_role_path %>
